<style>
body{
  background-color: #343a40 !important;
}
</style>

<div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Forgot your password?</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-label-group">
              <%= f.email_field :email, :class => "form-control", autofocus: true, autocomplete: "email" %>
              <label for="inputEmail">Email address</label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
            </div>
          </div>
          <%= f.submit "Send me reset password instructions", :class => "btn btn-primary btn-block" %>
          <% end %>
        <div class="text-center d-block small">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
</div>
