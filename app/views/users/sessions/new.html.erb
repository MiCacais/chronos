<style>
body{
  background-color: #343a40 !important;
}
</style>

<div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.email_field :email, :class => "form-control", autofocus: true, autocomplete: "email" %>
              <label for="inputEmail">Email address</label>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.password_field :password, :class => "form-control", autocomplete: "current-password" %>
              <label for="inputEmail">Password</label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
            <label>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </label>
            </div>
          </div>
          <%= f.submit "Log in" , :class => "btn btn-primary btn-block"%>
          <% end %>
        <div class="text-center d-block small">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
</div>
